<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_login_bg">

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="skip"
        android:textColor="@color/color_black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="账号"
        android:textColor="#ff2CC17B"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_input_account"
        app:layout_constraintRight_toLeftOf="@+id/et_input_account"
        app:layout_constraintTop_toTopOf="@+id/et_input_account" />

    <EditText
        android:id="@+id/et_input_account"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_background_transparent_green"
        android:hint="请输入账号"
        android:inputType="text"
        android:maxLength="11"
        android:maxLines="1"
        android:padding="10dp"
        android:textColorHint="@color/color_gray"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="密码"
        android:textColor="#ff2CC17B"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_input_password"
        app:layout_constraintRight_toLeftOf="@+id/et_input_password"
        app:layout_constraintTop_toTopOf="@+id/et_input_password" />

    <EditText
        android:id="@+id/et_input_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_background_transparent_green"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="64"
        android:maxLines="1"
        android:padding="10dp"
        android:textColorHint="@color/color_gray"
        android:textSize="13sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/et_input_account"
        app:layout_constraintRight_toRightOf="@+id/et_input_account"
        app:layout_constraintTop_toBottomOf="@+id/et_input_account" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="确认"
        android:textColor="#ff2CC17B"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_input_repassword"
        app:layout_constraintRight_toLeftOf="@+id/et_input_repassword"
        app:layout_constraintTop_toTopOf="@+id/et_input_repassword" />

    <EditText
        android:id="@+id/et_input_repassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_background_transparent_green"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:maxLength="64"
        android:maxLines="1"
        android:padding="10dp"
        android:textColorHint="@color/color_gray"
        android:textSize="13sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/et_input_password"
        app:layout_constraintRight_toRightOf="@+id/et_input_password"
        app:layout_constraintTop_toBottomOf="@+id/et_input_password" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/shape_background_green"
        android:gravity="center"
        android:padding="10dp"
        android:text="注册"
        android:textColor="@color/color_white"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_input_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册即代表阅读并同意用户服务条款"
        android:textColor="@color/color_light_blue"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />


</androidx.constraintlayout.ConstraintLayout>