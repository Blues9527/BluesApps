<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lanhuajian.blues">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.BluesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Custom"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name="com.example.lanhuajian.blues.framework.widget.ShowImageActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:launchMode="singleInstance"
            android:theme="@style/ZoomInOutAnimation" />

        <activity
            android:name=".splash.SplashActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Custom"></activity>
        <activity
            android:name=".module_login.LoginActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Custom"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module_register.view.RegisterActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Custom"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>